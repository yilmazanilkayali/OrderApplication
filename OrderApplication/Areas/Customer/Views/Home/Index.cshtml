@using OrderApplication.Entities
@model IEnumerable<Product> 

    
    <div class="row py-2">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-mg-6">
            <div class="row p-1">
                <div class="col-md-12" style="border: 1px solid #0066cc border-radius:4px" >
                    <div class="card pt-1" >
                        <img src="@product.Picture" class="card-img-top-rounded" />
                        <div class="card-body">
                            <div px-1>
                                <p class="card-title h6">@product.Name</p>
                                <p class="px-1">@product.Price ₺</p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
    