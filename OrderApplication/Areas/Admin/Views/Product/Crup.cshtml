@model OrderApplication.Entities.ViewModels.ProductVM

<h2>@(Model.Product.Id <= 0 ? "Ekle" : "Güncelle")</h2>

<form method="post" enctype="multipart/form-data">  
 <input asp-for="Product.Id" type="hidden" />
 <input asp-for="Product.Picture" type="hidden" />

    @if(Model != null)
    {
        <div class="col-6">
        <img src = "@Model.Product.Picture" width=250px />
        </div>
    }

   <label asp-for="Product.Id">@Model.Product.Id</label>

   @Html.HiddenFor(x=>x.Product.Id)

    <div class="row my-1">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name"  class="form-control"/>
    </div>
    
    <div class="row my-1">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description"  class="form-control"/>
    </div>
    <div class="row my-1">
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price"  class="form-control"/>
    </div>
    <div class="row my-1">
        <label asp-for="Product.Barcode"></label>
        <input asp-for="Product.Barcode"  class="form-control"/>
    </div>
    <div class="row my-1">
        <label asp-for="Product.CategoryId"></label>
        <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control">
            <options disabled selected>--Lütfen Bir Kategori Seçiniz--</options>
        </select>
    </div>
    <div class="row my-1">
        <label asp-for="Product.Picture"></label>
        <input type="file" id="" name="file" accept="image/*" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">@(Model.Product.Id <= 0 ? "Ekle" : "Güncelle")</button>

</form>